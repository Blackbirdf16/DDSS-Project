# Example environment variables for FairRide (copy to .env and customize)

# PostgreSQL connection string
FAIRRIDE_DB_URL=postgresql://fairride:secure_password@localhost:5432/fairride

# Redis connection URL
FAIRRIDE_REDIS_URL=redis://localhost:6379/0

# Security keys
# Use Fernet key for at-rest encryption. Generate with cryptography.Fernet.generate_key()
# Prefix with b64: to auto-decode from base64 in config
SECURITY_AT_REST_KEY=b64:REPLACE_WITH_BASE64_FERNET_KEY

# HMAC key for provider payload integrity
SECURITY_PROVIDER_HMAC_KEY=REPLACE_WITH_STRONG_RANDOM_KEY
